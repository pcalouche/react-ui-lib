{
  "name": "@pcalouche/react-ui-lib",
  "version": "1.0.0",
  "description": "Example React UI Library built with Rollup.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pcalouche/react-ui-lib.git"
  },
  "author": "Philip Calouche",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@rollup/plugin-image": "^2.0.6",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^13.0.10",
    "@types/jest": "^26.0.21",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "cpx": "^1.5.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^2.7.1",
    "rollup": "2.42.3",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-styles": "^3.14.1",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  },
  "peerDependencies": {
    "react": ">=16.8.6",
    "react-dom": ">=16.8.6"
  },
  "scripts": {
    "scss:watch": "cpx \"src/scss/**\" dist/scss -v -w",
    "rollup:watch": "rollup -c -w",
    "build:watch": "npm run clean && npm-run-all -p scss:watch rollup:watch",
    "clean": "rimraf dist",
    "scss:build": "cpx \"src/scss/**\" dist/scss -v",
    "src:build": "cpx \"src/**\" dist/src -v",
    "rollup:build": "rollup -c",
    "build": "npm run clean && npm-run-all -s clean scss:build rollup:build",
    "prepublishOnly": "npm run build"
  },
  "jest": {
    "bail": true,
    "preset": "ts-jest",
    "moduleNameMapper": {
      "\\.(css|scss|less)$": "identity-obj-proxy"
    },
    "verbose": true
  }
}
