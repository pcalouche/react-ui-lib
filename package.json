{
  "name": "@pcalouche/react-ui-lib",
  "version": "1.0.0",
  "description": "Example React UI Library built with Rollup.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pcalouche/react-ui-lib.git"
  },
  "author": "Philip Calouche",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "esnext": "dist/src/index.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@babel/core": "7.10.4",
    "@babel/plugin-proposal-class-properties": "7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "7.10.4",
    "@babel/preset-env": "7.10.4",
    "@babel/preset-react": "7.10.4",
    "@rollup/plugin-commonjs": "13.0.0",
    "@rollup/plugin-node-resolve": "7.1.3",
    "@rollup/plugin-typescript": "5.0.1",
    "@types/react": "^16.9.41",
    "@types/reactstrap": "^8.5.0",
    "bootstrap": "4.5.0",
    "cpx": "1.5.0",
    "cross-env": "5.2.1",
    "npm-run-all": "4.1.5",
    "prop-types": "15.7.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "reactstrap": "8.4.1",
    "rimraf": "2.7.1",
    "rollup": "2.21.0",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-img": "1.1.0",
    "rollup-plugin-size-snapshot": "0.12.0",
    "rollup-plugin-terser": "5.3.0",
    "rollup-plugin-typescript2": "0.27.1",
    "typescript": "3.9.6",
    "webpack": "4.42.0"
  },
  "peerDependencies": {
    "bootstrap": "^4.4.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "reactstrap": "^8.4.1"
  },
  "scripts": {
    "scss:watch": "cpx \"src/scss/**\" src/scss -v -w",
    "image:watch": "cpx \"src/images/*.{png,jpg}\" src/images -v -w",
    "src:watch": "cpx \"src/**\" dist/src -v -w",
    "rollup:watch": "rollup -c -w",
    "build:watch": "npm-run-all -p scss:watch image:watch src:watch rollup:watch",
    "clean": "rimraf dist",
    "scss:copy": "cpx \"src/scss/**'\" dist/scss -v",
    "image:copy": "cpx \"src/images/*.{png,jpg}\" dist/images -v",
    "src:copy": "cpx \"src/**\" dist/src -v",
    "rollup:build": "rollup -c",
    "build": "npm-run-all -s clean scss:copy image:copy src:copy rollup:build",
    "prepublishOnly": "npm run build"
  }
}
