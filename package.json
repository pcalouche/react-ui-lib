{
  "name": "@pcalouche/react-ui-lib",
  "version": "1.0.0",
  "description": "Example React UI Library built with Rollup.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pcalouche/react-ui-lib.git"
  },
  "author": "Philip Calouche",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/core": "7.10.5",
    "@babel/plugin-transform-runtime": "7.10.5",
    "@babel/preset-env": "7.10.4",
    "@babel/preset-react": "7.10.4",
    "@rollup/plugin-babel": "5.1.0",
    "@rollup/plugin-image": "2.0.5",
    "@rollup/plugin-node-resolve": "7.1.3",
    "@types/jest": "^26.0.5",
    "@types/react": "^16.9.43",
    "cpx": "1.5.0",
    "cross-env": "5.2.1",
    "formik": "2.1.5",
    "npm-run-all": "4.1.5",
    "prop-types": "15.7.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "reactstrap": "8.4.1",
    "rimraf": "2.7.1",
    "rollup": "2.23.0",
    "rollup-plugin-size-snapshot": "0.12.0",
    "rollup-plugin-typescript2": "0.27.1",
    "typescript": "^3.9.7"
  },
  "peerDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "scripts": {
    "scss:watch": "cpx \"src/scss/**\" dist/scss -v -w",
    "rollup:watch": "rollup -c -w",
    "build:watch": "npm run clean && npm-run-all -p scss:watch rollup:watch",
    "clean": "rimraf dist",
    "scss:copy": "cpx \"src/scss/**'\" dist/scss -v",
    "image:copy": "cpx \"src/images/*.{png,jpg}\" dist/images -v",
    "src:copy": "cpx \"src/**\" dist/src -v",
    "rollup:build": "rollup -c",
    "build": "npm run clean && npm-run-all -s clean scss:copy rollup:build",
    "prepublishOnly": "npm run build"
  }
}
